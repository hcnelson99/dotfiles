# intel-ucode
# udev hibernate

mkdir -p ~/builds
cd ~/builds
git clone https://aur.archlinux.org/cower.git
cd cower
gpg --recv-keys --keyserver hkp://pgp.mit.edu 1EB2638FF56C0C53
yes | makepkg -sri
cd ..
git clone https://aur.archlinux.org/pacaur.git
cd pacaur
yes | makepkg -sri

pacaur -Syu --noconfirm reflector

sudo reflector --latest 15 --protocol http --protocol https --sort rate --save /etc/pacman.d/mirrorlist

cd ~/dotfiles

sudo mkdir -p /etc/pacman.d/hooks
sudo cp ~/dotfiles/mirrorupgrade.hook /etc/pacman.d/hooks

PKGS="vim ranger xsel stow redshift python-gobject python-xdg tmux zsh pass python-virtualenvwrapper ripgrep fzf xfce4 xfce4-goodies rofi arandr adapta-gtk-theme xorg-server xorg-xinit xorg-xmodmap networkmanager networkmanager-openvpn network-manager-applet pulseaudio ctags xbindkeys wmctrl firefox"
AUR="light unclutter-xfixes-git betterlockscreen rofi-pass numix-circle-icon-theme-git ttf-roboto-mono fonts-meta-extended-lt"
pacaur -Syu --needed $PKGS $AUR

systemctl enable NetworkManager

stow vim
mkdir -p ~/.config

git clone https://github.com/tarjoilija/zgen.git ~/.zgen
stow zsh
sudo chsh "$USER" -s "$(which zsh)"

sudo ln -s /etc/fonts/conf.avail/11-lcdfilter-default.conf /etc/fonts/conf.d
sudo ln -s /etc/fonts/conf.avail/10-sub-pixel-rgb.conf /etc/fonts/conf.d
sudo ln -s /etc/fonts/conf.avail/30-infinality-aliases.conf /etc/fonts/conf.d

stow X
betterlockscreen -u .background.png
stow git
stow tmux
stow xfce4
stow zathura

# for kak
# This sets up terminfo overrides properly so that kakoune colors work within tmux
# Taken from kakoune faq :doc faq
# $ curl -O https://raw.githubusercontent.com/mawww/kakoune/master/contrib/tmux-256color.terminfo
# $ tic tmux-256color.terminfo
