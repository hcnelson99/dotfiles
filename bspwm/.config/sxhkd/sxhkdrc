#
# wm independent hotkeys
#

XF86MonBrightness{Up,Down}
	light {-A,-U} 5%

XF86Audio{Raise,Lower}Volume
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 {+5%, -5%}

XF86AudioMute
	pactl set-sink-mute 0 toggle

# terminal emulator
alt + Return
	termite

# browser
alt + c
	google-chrome-stable

# pass
alt + {_, shift +} p
	rofi-pass {_, --last-used}

# lock
alt + Escape
	i3lock-fancy

# night mode
alt + n
	ps aux | grep redshift && pkill -USR1 '^redshift$' || redshift -l 40:73

# vpn
alt + {_, shift +} v
	nmcli con {up,down} id oli

# program launcher
alt + d
	rofi -show run

alt + r
	bspc node @parent -R 90
# make sxhkd reload its configuration files:
alt + shift + r
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
alt + shift + e
	bspc quit

# close and kill
alt + {_, shift +} q
	bspc node -{c,k}

# move the window to the preselect
alt + m
	bspc node -n 'last.!automatic.local'

# swap the current node and the biggest node
alt + b
	bspc node -s biggest.tiled.local

alt + {_, shift + } g
	bspc config window_gap $(( $(bspc config window_gap) {+,-} 15 ))

#
# state/flags
#

# set the window state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop
alt + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

#
# preselect
#

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
alt + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
