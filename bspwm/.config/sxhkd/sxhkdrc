# General
XF86Audio{Raise,Lower}Volume
	pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ {+5%, -5%}

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightness{Up,Down}
	brillo -equ 1500 {-A,-U} 5%

# terminal emulator
super + Return
	xfce4-terminal

super + shift + Return
	id=$(cat /tmp/scratchid);\
	bspc node $id --flag hidden;bspc node -f $id

# browser
super + c
	firefox

# pass
super + {_, shift +} p
	rofi-pass {_, --last-used}

# pavucontrol
super + a
	pavucontrol

# lock
super + Escape
	betterlockscreen -s

# program launcher
super + d
	rofi -show run

super + r
	bspc node @parent -R 90

# reload sxhkdrc
super + shift + r
	pkill -USR1 -x sxhkd

super + {_, shift +} n
	sct {3000, _}

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + e
	bspc quit

# close and kill
super + {_, shift +} q
	bspc node -{c,k}

# move the window to the preselect
super + m
	bspc node -n 'last.!automatic.local'

# swap the current node and the biggest node
super + b
	bspc node -s biggest.tiled.local

super + g
	sudo gpu_fix_artifacts.sh

super + shift + s
	gnome-screenshot -i


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev.local,next.local}

# focus or send to the next/previous desktop
super + {_,shift + } bracket{left,right}
	bspc {desktop -f,node -d} {prev.local,next.local}

# focus the last node
super + Tab
	bspc desktop -f last.local

# focus the last monitor
super + grave
	bspc monitor -f last

# move to the last monitor
super + shift + grave
	bspc node -m last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# delete focused desktop
super + Shift + x
	bspc desktop focused -r

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + space
	xdo hide -N "Polybar" && bspc config bottom_padding 0
super + shift + space
	xdo show -N "Polybar" && bspc config bottom_padding 27
