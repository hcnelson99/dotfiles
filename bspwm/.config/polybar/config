[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color10}
foreground = ${xrdb:foreground}
foreground-alt = foreground

red=      ${xrdb:color1}
green=     ${xrdb:color2}
yellow=      ${xrdb:color3}
blue=     ${xrdb:color5}

;wrong
magenta=     ${xrdb:color6} 

cyan=     ${xrdb:color4}
white=      #ffffff


[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 1904
height = 27
offset-x = 8
offset-y = 8

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = ${colors.blue}

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 1

font-0 = Gohu GohuFont:pixelsize=13;1
font-1 = Wuncon Siji:pixelsize=24;1
font-2 = FontAwesome:pixelsize=13;1
font-3 = Noto Sans:pixelsize=13;1

modules-left = bspwm xwindow
modules-center = 
modules-right =  volume filesystem  memory cpu temperature battery wlan eth date
;systemRoot systemHome s

;tray_output none
;tray-position = right
tray-detached = true
tray-padding = 2
;tray-transparent = true
tray-background = ${colors.background}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
;label-background = ${colors.background-alt}
label-padding = 2
format-underline = ${colors.blue}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = " %free%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.yellow}

[module/bspwm]
type = internal/bspwm

label-focused = ●
label-focused-underline= ${colors.yellow}
label-focused-background = ${colors.background}
label-focused-padding = 2

label-occupied = ●
label-occupied-padding = 2
label-occupied-background = ${colors.background}

label-urgent = !
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-empty = ○
label-empty-background = ${colors.background}
label-empty-padding = 2

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

